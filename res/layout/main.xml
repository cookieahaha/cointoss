<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

    <com.google.ads.AdView xmlns:googleads="http://schemas.android.com/apk/lib/com.google.ads"
                         android:id="@+id/adView"
                         android:layout_width="fill_parent"
                         android:layout_height="wrap_content"
                         googleads:adUnitId="a150104ecfd4fa8"
                         googleads:adSize="BANNER"
                         googleads:testDevices="TEST_EMULATOR, TEST_DEVICE_ID"
                         googleads:loadAdOnCreate="true"/>

    <TextView android:id="@+id/text"
        android:layout_weight="2"
        android:layout_height="0dp"
        android:layout_width="fill_parent"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scaleType="fitEnd" >

      <ImageButton android:id="@+id/button_HEAD"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:scaleType="fitEnd"
            android:background="#ffffff"
            android:onClick="guess" 
            android:src="@drawable/us_dollar_coin_front" />

      <ImageButton android:id="@+id/button_TAIL"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:scaleType="fitEnd"
            android:background="#ffffff"
            android:onClick="guess" 
            android:src="@drawable/us_dollar_coin_back" />

  </LinearLayout>

</LinearLayout>
